<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sdu.rnyati.hometownchat.AddUserActivity">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:ems="@integer/google_play_services_version"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:textAlignment="viewStart"
        android:layout_below="@+id/year"
        android:layout_alignStart="@+id/year"
        android:layout_marginTop="34dp"
        android:layout_alignEnd="@+id/year" />

    <Spinner
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:dropDownWidth="match_parent"
        android:minHeight="55dp"
        android:minWidth="300dp"
        android:spinnerMode="dialog"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView1" />

    <Spinner
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_alignTop="@+id/textView5"
        android:minHeight="55dp"
        android:minWidth="300dp"
        android:spinnerMode="dialog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="@integer/google_play_services_version"
        android:id="@+id/city"
        android:hint="Enter City"
        android:textSize="14sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/country"
        android:layout_alignStart="@+id/country"
        android:layout_alignEnd="@+id/country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="@integer/google_play_services_version"
        android:id="@+id/year"
        android:textSize="14sp"
        android:layout_alignStart="@+id/state"
        android:layout_alignBottom="@+id/city"
        android:layout_alignEnd="@+id/state"
        android:layout_alignTop="@+id/city"
        android:hint="Enter year" />

    <TextView
        android:text="Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="27sp"
        android:layout_alignBaseline="@+id/city"
        android:layout_alignBottom="@+id/city"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="27sp"
        android:layout_alignTop="@+id/country"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="@integer/google_play_services_version"
        android:id="@+id/password"
        android:hint="Enter password"
        android:textSize="24sp"
        android:layout_alignStart="@+id/emailAdress"
        android:layout_alignEnd="@+id/emailAdress"
        android:layout_above="@+id/country" />

    <TextView
        android:text="NickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="93dp"
        android:id="@+id/textView1"
        android:textSize="27sp"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="@integer/google_play_services_version"
        android:id="@+id/nickName"
        android:hint="Enter nickname"
        android:textSize="24sp"
        android:layout_marginRight="45dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignStart="@+id/country" />

    <TextView
        android:text="Email Id   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2"
        android:textSize="27sp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/nickName"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:textSize="27sp"
        android:textAlignment="textStart"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="27sp"
        android:layout_alignBaseline="@+id/city"
        android:layout_alignBottom="@+id/city"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="27sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="27sp"
        android:layout_marginLeft="2dp"
        android:textAlignment="viewStart"
        android:layout_alignBottom="@+id/longitude"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/longitude"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/city"
        android:text="Longitude"
        android:textSize="27sp" />

    <TextView
        android:text="USER REGISTRATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_above="@+id/nickName"
        android:layout_alignEnd="@+id/nickName"
        android:layout_marginBottom="31dp"
        android:layout_alignStart="@+id/textView1"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/registerUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/setLocation"
        android:layout_alignStart="@+id/textView7"
        android:text="Register User"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/city"
        android:layout_marginLeft="8dp"
        android:width="@android:dimen/thumbnail_width"
        android:autoText="false"
        android:textSize="24sp"
        android:layout_alignStart="@+id/city"
        android:layout_alignTop="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/nickName"
        android:id="@+id/emailAdress"
        android:layout_alignEnd="@+id/nickName"
        android:hint="Enter email address"
        android:textSize="24sp" />

    <Button
        android:id="@+id/setLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/latitude"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="46dp"
        android:text="Set Location"
        android:textSize="36sp" />
</RelativeLayout>
